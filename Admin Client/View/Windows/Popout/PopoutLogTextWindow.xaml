<Window x:Class="Admin_Client.View.Windows.Popout.PopoutLogTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin_Client.View.Windows.Popout"
        mc:Ignorable="d"
        Title="PopoutLogTextWindow" Height="600" Width="700" WindowStartupLocation="CenterOwner" Closed="Window_Closed">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="Label_LogFileName" Grid.Row="0" FontSize="30" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Border Grid.Row="1" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Gray" BorderThickness="1" Resources="{StaticResource roundborder10}">
            <TextBox Name="TextBlock_Content" TextWrapping="WrapWithOverflow" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Resources="{StaticResource roundborder10}"/>
        </Border>

    </Grid>
</Window>
